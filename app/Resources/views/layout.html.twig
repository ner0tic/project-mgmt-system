  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta http-equiv="Content-Language" content="en" />

    <link rel="alternate" type="application/rss+xml" href="/feed/" title="RSS" />
    <title>{% block title %}[PMS]Project Management System{% endblock %}</title>

    <meta name="description" content="Project Management System">
    <meta name="author" content="david durost">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

     {% block stylesheets %}
    <link href="http://fonts.googleapis.com/css?family=Oxygen" rel="stylesheet" type="text/css">
    <link href="{{ asset('/bundles/pmsuser/css/bootstrap.css') }}" rel="stylesheet" type="text/css" media="all"/>
    <link href="{{ asset('/bundles/pmsuser/css/font-awesome.css') }}" rel="stylesheet">
    <link href="{{ asset('/bundles/pmsuser/css/pms.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>
{% block body %}
    <div class="container">
        {% block header %}
        <div class="masthead clearfix">
            <h1 class="pull-left">
                <i class="icon-bookmark icon-large"></i><br />
                {{ 'portfolio mgmt system' | title }}
            </h1>
            {{ knp_menu_render('main') }}
        </div>
        {% endblock %}
        {% block content %}{% endblock %}
    </div>
    <div class="footer">
    {% block footer %}
        <div class="container">
            <div class="row">
                <div class="span4">
                    <h3>Links</h3>
                    <ul class="footer-nav">
                        <li>
                            <a href="index.html">Home</a>
                        </li>
                    </ul>
                </div>
                <div class="span4">
                    <h3>Newsletter</h3>
                    <p>Join our newsletter and be the first to know about our latest news and special offers</p>
                    <form class="form-inline">
                      <div class="input-append">
                        <input class="span2" id="appendedInputButton" size="16" type="text"><button class="btn btn-primary" type="button">Join</button>
                      </div>
                    </form>
                </div>
                <div class="span4">
                    <h3>Contact</h3>
                    <p>If you have a question don't hesitate to get in touch:</p>
                    <p>Address line 1<br />Address line 2<br />City<br />ZIP/Post Code</p>
                    <p>
                        <strong>Tel:</strong> 0123 456 789<br />
                        <strong>Email:</strong> <a href="">info@website.com</a>
                    </p>
                </div>
            </div>
        </div>
    {% endblock %}
    </div>
    {% block javascripts %}
      <script src="{{ asset('/bundles/pmsuser/js/jquery-1.9.1.js') }}"></script>
      <script src="{{ asset('/bundles/pmsuser/js/bootstrap.js') }}"></script>
    {% endblock %}
{% endblock %}
</body>
</html>
