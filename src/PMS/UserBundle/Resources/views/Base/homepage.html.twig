{%  block content %}
    {% block carousel %}
        <div id="myCarousel" class="carousel slide">
            <div class="carousel-inner">
                {% for key, item in carousel.items %}
                    <div class="item {{ 'item'~key }}">
                        <p class="caption">{{item.caption}}</p>
                    </div>
                {% endfor %}
            </div>
            <a class="carousel-control left" href="#myCarousel" data-slide="prev">&lsaquo;</a>
            <a class="carousel-control right" href="#myCarousel" data-slide="next">&rsaquo;</a>
        </div>
    {% endblock %}
    {% block home_columns %}
        <div class="row home-columns">
            <div class="span4 home-column clearfix">
                <i class="icon-th pull-left"></i>
                <div class="content">
                    <h2>Responsive Grid</h2>
                    <p>The theme is based on a responsive grid, ensuring your content looks amazing no matter what device your customer is looking at it on</p>
                </div>
            </div>
            <div class="span4 home-column clearfix">
                <i class="icon-sitemap pull-left"></i>
                <div class="content">
                    <h2>6 Template Types</h2>
                    <p>You get a <a href="indx.html">homepage</a>, <a href="work.html">work section</a>, <a href="1-column.html">1 column layout</a>, <a href="2-column.html">2 column layout</a> and a <a href="contact.html">contact page</a>. Build the perfect portfolio site!</p>
                </div>
            </div>
            <div class="span4 home-column clearfix">
                <i class="icon-picture pull-left"></i>
                <div class="content">
                    <h2>Slideshow</h2>
                    <p>Show off your best work on the homepage in a slideshow that is easily customisable, and easy to add to any other page!</p>
                </div>
            </div>
        </div>
    {% endblock %}
{% endblock %}
