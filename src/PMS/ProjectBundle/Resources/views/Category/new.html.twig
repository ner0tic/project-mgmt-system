{% extends '::layout.html.twig' %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('/bundles/pmsuser/css/Base/new.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/pmsuser/css/Base/form.css') }}" rel="stylesheet" />
    <link href="{{ asset('/bundles/pmsproject/css/category.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
<div class="row-fluid">
    <div class="span8 container">
        <h1>{{ 'update a category' | title }}</h1>
        <form action="{{ path( 'pms_category_new' ) }}" method="post" {{ form_enctype( form ) }}>
        {% block form %}
            <div id="form-errors" class="hidden">
                {{ form_errors( form ) }}
            </div>
            <div class="row-fluid">
                <div id="left-pane" class="pull-right">
                    <div>
                        {{ form_row( form.name ) }}
                    </div>
                    <div>
                        {{ form_row( form.parent ) }}
                    </div>
                </div>
                <div id="right-pane" class="pull-right">
                    <div>
                        {{ form_row( form.description ) }}
                    </div>
                </div>
            </div>
            <div>
                <button class="btn btn-primary btn-block pull-right" name="submit">{{ 'go' | upper }}</button>
            </div>
            {% endblock %}
        </form>
    </div>
    <div class="span4 container"></div>
</div>
{% endblock %}
